<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper     
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.SearchDao">
	<select id="selectUsersByCity" resultType="map">
		SELECT *
		  FROM user_table
		 WHERE user_city = #{city}
	</select>
	<select id="selectUsersByLanguage" resultType="map">
		SELECT *
		  FROM user_table u
		  JOIN language_table l
		    ON u.user_num = l.user_num
		 WHERE user_language = #{lang}
	</select>
</mapper>